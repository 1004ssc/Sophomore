#pragma warning (disable:4996)
#include<stdio.h>

int main(void)
{
	printf("2018034111 신승철\n");

	int x;
	int y;
	int z;
	int sum;
	float average;

	printf("세개의 정수를 입력하시오:");
	scanf("%d %d %d", &x, &y, &z);

	sum = x + y + z;
	average = sum / 3.0;
	printf("합계: %d, 평균: %f\n", sum, average);

	return 0;
}
